# Database Configuration
POSTGRES_URL=postgresql://username:password@hostname:5432/database

# SSL Configuration (optional)
# Options: 'require' (default), 'prefer', 'allow', 'disable', 'true', 'false'
# Use 'require' for production, 'disable' or 'false' for local development without SSL
POSTGRES_SSL=require

# Connection Pool Settings (optional)
POSTGRES_MAX_CONNECTIONS=10
POSTGRES_IDLE_TIMEOUT=30
